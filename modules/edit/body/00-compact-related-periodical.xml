<?xml version="1.0" encoding="UTF-8"?>
<div xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:e="http://www.asia-europe.uni-heidelberg.de/" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xf="http://www.w3.org/2002/xforms" class="compact block-form" tab-id="compact-b-periodical">
    <xf:group>
        <fieldset class="level-1">
            <div class="join">
                <span class="legend">
                    <span class="legend">Periodical</span>
                </span>
                <span class="xforms-help">
                    <span onmouseover="show(this, 'hint', true)" onmouseout="show(this, 'hint', false)" class="xforms-hint-icon"/>
                    <div class="xforms-help-value">
                        <xf:output mediatype="application/xhtml+xml" incremental="true" ref="instance('code-tables')/code-table[code-table-name='hint-code']/items/item[value='relatedItem-periodical-compact']/help"/>
                    </div>
                </span>
            </div>
            <xf:repeat nodeset="instance('save-data')/mods:relatedItem" id="relatedItem-periodical-repeat">
                <xf:group>
                    <fieldset class="level-2">
                        <div class="join">
                            <span class="legend">Periodical Title</span>
                            <span class="xforms-help">
                                <span onmouseover="show(this, 'hint', true)" onmouseout="show(this, 'hint', false)" class="xforms-hint-icon"/>
                                <div class="xforms-help-value">
                                    <xf:output mediatype="application/xhtml+xml" incremental="true" ref="instance('code-tables')/code-table[code-table-name='hint-code']/items/item[value='relatedItem-periodical-titleInfo-compact']/help"/>
                                </div>
                            </span>
                        </div>
                        <xf:repeat nodeset="./mods:titleInfo" id="relatedItem-titleInfo-periodical-repeat">
                            <xf:group ref=".[(@transliteration) or string-length(@lang) &gt; 0]">
                                <br/>
                            </xf:group>
                            <xf:group ref=".[(@transliteration)]" class="margin-plus">
                                <xf:select1 ref="/mods:mods/mods:extension/*:transliterationOfResource">
                                    <xf:label>Transliteration<span class="xforms-help">
                                            <span onmouseover="show(this, 'hint', true)" onmouseout="show(this, 'hint', false)" class="xforms-hint-icon"/>
                                            <div class="xforms-help-value">
                                                <xf:output mediatype="application/xhtml+xml" incremental="true" ref="instance('code-tables')/code-table[code-table-name='hint-code']/items/item[value='transliteration-compact']/help"/>
                                            </div>
                                        </span>
                                    </xf:label>
                                    <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='transliteration-short-code']/items/item">
                                        <xf:label ref="label"/>
                                        <xf:value ref="value"/>
                                    </xf:itemset>
                                </xf:select1>
                            </xf:group>
                            <xf:group ref=".[string-length(@lang) &gt; 0]" class="margin-plus">
                                <xf:select1 ref="./@lang">
                                    <xf:label>Language<span class="xforms-hint-icon opaque"/>
                                    </xf:label>
                                    <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='language-3-type-sorted-short-code']/items/item">
                                        <xf:label ref="label"/>
                                        <xf:value ref="value"/>
                                    </xf:itemset>
                                </xf:select1>
                            </xf:group>
                            <!--<xf:output ref="/mods:mods/mods:language/mods:scriptTerm"/>-->
                            <xf:group ref=".[not(@script) and not(@transliteration)]" class="margin-plus">
                                <xf:select1 ref="/mods:mods/mods:language/mods:scriptTerm">
                                    <xf:label>Script<span class="xforms-help">
                                            <span onmouseover="show(this, 'hint', true)" onmouseout="show(this, 'hint', false)" class="xforms-hint-icon"/>
                                            <div class="xforms-help-value">
                                                <xf:output mediatype="application/xhtml+xml" incremental="true" ref="instance('code-tables')/code-table[code-table-name='hint-code']/items/item[value='script-compact']/help"/>
                                            </div>
                                        </span>
                                    </xf:label>
                                    <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='script-short-code']/items/item">
                                        <xf:label ref="label"/>
                                        <xf:value ref="value"/>
                                    </xf:itemset>
                                </xf:select1>
                            </xf:group>
                            <xf:group>
                                <xf:input ref="./mods:nonSort" class="text_10 margin-plus">
                                    <xf:label>
                                        <xf:group ref=".[string-length(../@type) = 0]">Non Sort</xf:group>
                                        <xf:group ref=".[../@type='translated' and not(../@lang)]">Transliterated Non Sort</xf:group>
                                        <xf:group ref=".[../@type='translated' and (../@lang)]">Translated Non Sort</xf:group>
                                    </xf:label>
                                </xf:input>
                            </xf:group>
                            <xf:group>
                                <xf:input ref="./mods:title" class="text_150 margin-plus">
                                    <xf:label>
                                        <xf:group ref=".[string-length(../@type) = 0]">Title</xf:group>
                                        <xf:group ref=".[../@type='translated' and not(../@lang)]">Transliterated Title</xf:group>
                                        <xf:group ref=".[../@type='translated' and (../@lang)]">Translated Title</xf:group>
                                    </xf:label>
                                </xf:input>
                            </xf:group>
                            <xf:group>
                                <xf:input ref="./mods:subTitle" class="text_150 margin-plus">
                                    <xf:label>
                                        <xf:group ref=".[string-length(../@type) = 0]">Subtitle</xf:group>
                                        <xf:group ref=".[../@type='translated' and not(../@lang)]">Transliterated Subtitle</xf:group>
                                        <xf:group ref=".[../@type='translated' and (../@lang)]">Translated Subtitle</xf:group>
                                    </xf:label>
                                </xf:input>
                            </xf:group>
                        </xf:repeat>
                    </fieldset>
                </xf:group>
                <xf:group>
                    <fieldset class="level-2">
                        <div class="join wide">
                            <span class="legend">Editor(s) of Periodical</span>
                            <span class="join-button">
                                <xf:trigger ref=".[mods:name/mods:namePart/@transliteration]">
                                    <xf:label>+</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:insert nodeset="instance('save-data')/mods:name" at="index('relatedItem-name-repeat-periodical')" position="after" origin="instance('compact-template')/mods:name[6]"/>
                                    </xf:action>
                                </xf:trigger>
                                <xf:trigger ref=".[not(mods:name/mods:namePart/@transliteration)]">
                                    <xf:label>+</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:insert nodeset="instance('save-data')/mods:name" at="index('relatedItem-name-repeat-periodical')" position="after" origin="instance('compact-template')/mods:name[5]"/>
                                    </xf:action>
                                </xf:trigger>
                            </span>
                            <span class="xforms-help">
                                <span onmouseover="show(this, 'hint', true)" onmouseout="show(this, 'hint', false)" class="xforms-hint-icon"/>
                                <div class="xforms-help-value">
                                    <xf:output mediatype="application/xhtml+xml" incremental="true" ref="instance('code-tables')/code-table[code-table-name='hint-code']/items/item[value='name-relatedItem-periodical-editor-compact']/help"/>
                                </div>
                            </span>
                        </div>
                        <!-- Should there be personal editors? -->
                        <xf:repeat nodeset="./mods:name" id="relatedItem-name-repeat-periodical">
                            <xf:group>
                                <fieldset class="level-3">
                                    <div class="join">
                                        <span class="legend">Name</span>
                                        <span class="xforms-help">
                                            <span onmouseover="show(this, 'hint', true)" onmouseout="show(this, 'hint', false)" class="xforms-hint-icon"/>
                                            <div class="xforms-help-value">
                                                <xf:output mediatype="application/xhtml+xml" incremental="true" ref="instance('code-tables')/code-table[code-table-name='hint-code']/items/item[value='namePart-compact']/help"/>
                                            </div>
                                        </span>
                                    </div>
                                    <xf:group>
                                        <!--<xf:select1 ref="./@type">
                                                <xf:label>Type of Name</xf:label>
                                                <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='name-type-code']/items/item">
                                                    <xf:label ref="label"/>
                                                    <xf:value ref="value"/>
                                                </xf:itemset>
                                            </xf:select1>-->
                                    </xf:group>
                                    <xf:repeat nodeset="./mods:namePart" id="relatedItem-namePart-periodical-repeat">
                                        <xf:group>
                                            <!--<xf:select1 ref="./@type" class="right">
                                                    <xf:label>
                                                        <xf:group ref="../.[@script='Latn']">Transliterated</xf:group>
                                                        <xf:group ref="../.[not(@script='Latn')]"/>
                                                    </xf:label>
                                                    <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='name-part-type-compact-code']/items/item">
                                                        <xf:label ref="label"/>
                                                        <xf:value ref="value"/>
                                                    </xf:itemset>
                                                </xf:select1>-->
                                            <xf:input ref="." class="text_100 margin-plus">
                                                <xf:label>
                                                    <xf:group ref=".[@script='Latn']">Transliterated</xf:group>
                                                    <xf:group ref=".[not(@script='Latn')]"/>
                                                </xf:label>
                                            </xf:input>
                                        </xf:group>
                                    </xf:repeat>
                                </fieldset>
                            </xf:group>
                            <!--<xf:group> <fieldset class="level-3"> <div class="join"> <span class="legend">Role</span> <span class="join-button"> <xf:trigger> <xf:label>+</xf:label> <xf:action ev:event="DOMActivate"> <xf:insert nodeset="instance('save-data')/mods:role" at="index('role-repeat')" position="after" origin="instance('compact-template')/mods:name[3]/mods:role"/> </xf:action> </xf:trigger> </span> <span class="xforms-help"> <span onmouseover="show(this, 'hint', true)" onmouseout="show(this, 'hint', false)" class="xforms-hint-icon"/> <div class="xforms-help-value"> <p> Role contains a description of the role of the person or institution named above to the resource being catalogued.</p> <p> Repeat for each new role played by the named entity, i.e. the same person or institution can have several roles in relation to one resource.</p> <p> The more common roles are listed at the top.</p> <p> More role input options can be found on the Name Info tab on the Citation Forms.</p> </div> </span> </div> <!-\-role repeat begins-\-> <xf:repeat nodeset="./mods:role" id="relatedItem-periodical-role-repeat"> <!-\-role input begins-\-> <!-\-DLF/Aquifer: RECOMMENDED]-\-> <!-\-Cluster: warn-\-> <!-\-roleTerm begins-\-> <!-\-DLF/Aquifer: OPTIONAL-\-> <!-\-Cluster: include-\-> <!-\-role node-add begins-\-> <!-\-roleTerm repeat begins-\-> <xf:repeat nodeset="./mods:roleTerm" id="relatedItem-periodical-roleTerm-repeat"> <!-\-roleTerm input begins-\-> <!-\-DLF/Aquifer: REQUIRED]-\-> <!-\-Cluster: require-\-> <xf:group class="hide-label margin-plus"> <xf:select1 ref="."> <xf:label>Role Term</xf:label> <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='role-short-code']/items/item"> <xf:label ref="label"/> <xf:value ref="value"/> </xf:itemset> </xf:select1> </xf:group> <!-\-roleTerm input ends-\-> </xf:repeat> <!-\-roleTerm repeat ends-\-> <!-\-roleTerm ends-\-> <!-\-role input ends-\-> </xf:repeat> <!-\-role repeat ends-\-> </fieldset> </xf:group>-->
                        </xf:repeat>
                    </fieldset>
                </xf:group>
                <xf:group>
                    <fieldset class="level-2">
                        <div class="join wide">
                            <span class="legend">Location of Article in Periodical</span>
                            <span class="xforms-help">
                                <span onmouseover="show(this, 'hint', true)" onmouseout="show(this, 'hint', false)" class="xforms-hint-icon"/>
                                <div class="xforms-help-value">
                                    <xf:output mediatype="application/xhtml+xml" incremental="true" ref="instance('code-tables')/code-table[code-table-name='hint-code']/items/item[value='part-relatedItem-periodical-compact']/help"/>
                                </div>
                            </span>
                        </div>
                        <xf:repeat nodeset="./mods:part" id="related-item-part-periodical-repeat">
                            <xf:group ref=".[mods:detail]">
                                <fieldset class="level-3">
                                    <div class="join">
                                        <span class="legend">Volume and Issue</span>
                                    </div>
                                    <xf:repeat nodeset="./mods:detail" id="related-item-part-detail-periodical-repeat">
                                        <xf:group ref=".[mods:number]" class="margin-plus">
                                            <xf:input ref="./mods:number" class="text_10">
                                                <xf:label>
                                                    <xf:output ref="./../@type"/>
                                                </xf:label>
                                            </xf:input>
                                        </xf:group>
                                    </xf:repeat>
                                </fieldset>
                            </xf:group>
                            <xf:group ref=".[mods:date]">
                                <fieldset class="level-3">
                                    <div class="join">
                                        <span class="legend">
                                            <span class="legend">Year of Publication</span>
                                        </span>
                                    </div>
                                    <xf:repeat nodeset="./mods:date" id="related-item-part-date-periodical-repeat">
                                        <div class="block-form">
                                            <xf:group ref="." class="hide-label margin-plus">
                                                <xf:input ref="." class="text_10">
                                                    <xf:label>Year</xf:label>
                                                </xf:input>
                                            </xf:group>
                                        </div>
                                    </xf:repeat>
                                </fieldset>
                            </xf:group>
                            <xf:group ref=".[mods:extent]">
                                <fieldset class="level-3">
                                    <div class="join">
                                        <span class="legend">Page Extent</span>
                                    </div>
                                    <xf:repeat nodeset="./mods:extent" id="related-item-extent-periodical-repeat">
                                        <xf:group ref=".[mods:start]" class="margin-plus">
                                            <xf:input ref="./mods:start" class="text_10">
                                                <xf:label>Start</xf:label>
                                            </xf:input>
                                        </xf:group>
                                        <xf:group ref=".[mods:end]" class="margin-plus">
                                            <xf:input ref="./mods:end" class="text_10">
                                                <xf:label>End</xf:label>
                                            </xf:input>
                                        </xf:group>
                                    </xf:repeat>
                                </fieldset>
                            </xf:group>
                        </xf:repeat>
                    </fieldset>
                </xf:group>
                <xf:group ref=".[mods:identifier]">
                    <fieldset class="level-2">
                        <div class="join">
                            <span class="legend">Identifiers</span>
                            <span class="join-button">
                                <xf:trigger ref=".[mods:identifier]">
                                    <xf:label>+</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:insert nodeset="instance('save-data')/mods:identifier" at="index('identifier-periodical-repeat')" position="after" origin="instance('compact-template')/mods:identifier"/>
                                    </xf:action>
                                </xf:trigger>
                            </span>
                            <span class="xforms-help">
                                <span onmouseover="show(this, 'hint', true)" onmouseout="show(this, 'hint', false)" class="xforms-hint-icon"/>
                                <div class="xforms-help-value">
                                    <xf:output mediatype="application/xhtml+xml" incremental="true" ref="instance('code-tables')/code-table[code-table-name='hint-code']/items/item[value='identifier-periodical-compact']/help"/>
                                </div>
                            </span>
                        </div>
                        <xf:repeat nodeset="./mods:identifier" id="identifier-periodical-repeat">
                            <xf:group ref=".[@type]" selection="open" class="hide-label margin-plus">
                                <xf:select1 ref="./@type">
                                    <xf:label>Identifier Type</xf:label>
                                    <xf:itemset nodeset="instance('code-tables')/code-table[code-table-name='identifier-type-code']/items/item">
                                        <xf:label ref="label"/>
                                        <xf:value ref="value"/>
                                    </xf:itemset>
                                </xf:select1>
                            </xf:group>
                            <xf:group>
                                <xf:input ref="." class="text_50 hide-label margin-plus">
                                    <xf:label>Identifier</xf:label>
                                </xf:input>
                            </xf:group>
                        </xf:repeat>
                    </fieldset>
                </xf:group>
            </xf:repeat>
        </fieldset>
    </xf:group>
</div>