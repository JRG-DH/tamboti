<div xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:e="http://www.asia-europe.uni-heidelberg.de/" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xf="http://www.w3.org/2002/xforms" class="compact block-form" tab-id="compact-b-xlink" e:dummy="dummy" xlink:dummy="dummy">
    <xf:group>
        <fieldset class="level-1">
            <div class="join extra-wide">
                <span class="legend">Location of Article, Contribution or Chapter</span>
                <span class="xforms-help">
                    <span onmouseover="XsltForms_browser.show(this, 'hint', true)" onmouseout="XsltForms_browser.show(this, 'hint', false)" class="xforms-hint-icon"/>
                    <div class="xforms-help-value">
                        <xf:output mediatype="application/xhtml+xml" incremental="true" ref="instance('code-tables')/code-table[code-table-name='hint-code']/items/item[value='other-location']/help"/>
                    </div>
                </span>
            </div>
            <xf:repeat nodeset="instance('save-data')/mods:relatedItem" id="relatedItem-repeat">
                <xf:group>
                    <fieldset class="level-2">
                        <div class="join">
                            <span class="legend">XLink</span>
                            <span class="xforms-help">
                                <span onmouseover="XsltForms_browser.show(this, 'hint', true)" onmouseout="XsltForms_browser.show(this, 'hint', false)" class="xforms-hint-icon"/>
                                <div class="xforms-help-value">
                                    <xf:output mediatype="application/xhtml+xml" incremental="true" ref="instance('code-tables')/code-table[code-table-name='hint-code']/items/item[value='xlink:href']/help"/>
                                </div>
                            </span>
                        </div>
                        <xf:group class="margin-plus hide-label">
                            <xf:input ref="./@xlink:href" class="text_50">
                                <xf:label>XLink</xf:label>
                            </xf:input>
                        </xf:group>
                    </fieldset>
                </xf:group>
                <xf:group ref=".[mods:part]">
                    <fieldset class="level-2">
                        <div class="join">
                            <span class="legend">Part</span>
                            <span class="join-button">
                                <xf:trigger>
                                    <xf:label>+</xf:label>
                                    <xf:action ev:event="DOMActivate">
                                        <xf:insert nodeset="instance('save-data')/mods:part" at="index('related-item-part-repeat')" position="before" origin="instance('compact-template')/mods:part"/>
                                    </xf:action>
                                </xf:trigger>
                            </span>
                            <span class="xforms-help">
                                <span onmouseover="XsltForms_browser.show(this, 'hint', true)" onmouseout="XsltForms_browser.show(this, 'hint', false)" class="xforms-hint-icon"/>
                                <div class="xforms-help-value">
                                    <xf:output mediatype="application/xhtml+xml" incremental="true" ref="instance('code-tables')/code-table[code-table-name='hint-code']/items/item[value='other-part']/help"/>
                                </div>
                            </span>
                        </div>
                        <xf:repeat nodeset="./mods:part" id="related-item-part-repeat">
                            <xf:group ref=".[mods:detail]">
                                <fieldset class="level-3">
                                    <div class="join">
                                        <span class="legend">Volume and Issue</span>
                                    </div>
                                    <xf:repeat nodeset="./mods:detail" id="related-item-part-detail-periodical-repeat">
                                        <xf:group ref=".[mods:number]" class="margin-plus">
                                            <xf:input ref="./mods:number" class="text_10">
                                                <xf:label>
                                                    <xf:output ref="./../@type"/>
                                                </xf:label>
                                            </xf:input>
                                        </xf:group>
                                    </xf:repeat>
                                </fieldset>
                            </xf:group>
                            <xf:group ref=".[string(mods:extension/e:template) = 'related-book-review-in-periodical'] | .[string(mods:extension/e:template) = 'related-article-in-periodical']">
                                <xf:group ref=".[mods:date]">
                                    <fieldset class="level-3">
                                        <div class="join">
                                            <span class="legend">
                                                <span class="legend">Year of Publication</span>
                                            </span>
                                        </div>
                                        <xf:repeat nodeset="./mods:date" id="related-item-part-date-periodical-repeat">
                                            <div class="block-form">
                                                <xf:group ref="." class="hide-label margin-plus">
                                                    <xf:input ref="." class="text_10">
                                                        <xf:label>Year</xf:label>
                                                    </xf:input>
                                                </xf:group>
                                            </div>
                                        </xf:repeat>
                                    </fieldset>
                                </xf:group>
                            </xf:group>
                            <xf:group ref=".[mods:extent]">
                                <fieldset class="level-3">
                                    <div class="join">
                                        <span class="legend">Page Extent</span>
                                    </div>
                                    <xf:repeat nodeset="./mods:extent" id="related-item-extent-periodical-repeat">
                                        <xf:group ref=".[mods:start]" class="margin-plus">
                                            <xf:input ref="./mods:start" class="text_10">
                                                <xf:label>Start</xf:label>
                                            </xf:input>
                                        </xf:group>
                                        <xf:group ref=".[mods:end]" class="margin-plus">
                                            <xf:input ref="./mods:end" class="text_10">
                                                <xf:label>End</xf:label>
                                            </xf:input>
                                        </xf:group>
                                    </xf:repeat>
                                </fieldset>
                            </xf:group>
                        </xf:repeat>
                    </fieldset>
                </xf:group>
            </xf:repeat>
        </fieldset>
    </xf:group>
</div>